<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aravans">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/vans"
        android:label="ARAVANS"
        android:roundIcon="@mipmap/vans_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity" android:label="AraVans">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".CadastrarCliente"></activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".CadastrarMotorista"></activity>
        <activity android:name=".EscolhaDestino"></activity>

    </application>

</manifest>